<p id="notice"><%= notice %></p>

<h1>Listing Matches</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Home</th>
      <th>Away</th>
      <th>Total overs</th>
      <th>First to bat</th>
      <th>Scoreboard</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date %></td>
        <td><%= team_name(match.home) %></td>
        <td><%= team_name(match.away) %></td>
        <td><%= match.total_overs %></td>
        <td><%= team_name(match.first_to_bat) %></td>
        <td><%= link_to 'Scoreboard', scoreboard_match_path(match) %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

